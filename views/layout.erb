<!doctype html>
<html lang='en'>
    <head>
        <title><%= @title %></title>
        <meta charset='utf-8'>
        <link rel='stylesheet' href='styles.css'>
    </head>
    <body>
    	<div class='header-container'>
            <h1 id='header'><a href='/''>Tic Tac Toe Game</a></h1>
        </div>
        
        <div class='body-container'>
    		<table id='board'>
        		<tr>
            		<td id='top-left'><%= board[0] %></td>
            		<td id='top-center'><%= board[1] %></td>
            		<td id='top-right'><%= board[2] %></td>
        		</tr>
        		<tr>
            		<td id='middle-left'><%= board[3] %></td>
            		<td id='center'><%= board[4] %></td>
            		<td id='middle-right'><%= board[5] %></td>
        		</tr>
        		<tr>
            		<td id='bottom-left'><%= board[6] %></td>
            		<td id='bottom-center'><%= board[7] %></td>
            		<td id='bottom-right'><%= board[8] %></td>
        		</tr>
    		</table>
        </div>

		<%= yield %>
        <hr class="style-one">
        <footer class='footer-container'>
            <h3 id='footer'><a href='https://en.wikipedia.org/wiki/Tic-tac-toe' target='blank'>Rules of Tic Tac Toe</a></h3>
        </footer>
        <hr class='style-one'>
        <p id='copywright'>&#169;John Erickson 2016</p>
    </body>
</html>